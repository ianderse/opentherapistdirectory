<meta name="Description" content="Find a therapist near you. Free for clients. Free for therapists.">

<% title "Therapist Finder" %>

<div class="container">
  <div class="row">
    <div class="col-md-2">
      <div>
        <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top" class='donate'>
          <input type="hidden" name="cmd" value="_s-xclick">
          <input type="hidden" name="hosted_button_id" value="YGJNNCN8FP668">
          <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_donate_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
          <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
        </form>
      </div>
      <%= image_tag "otdlogo.png", class: 'hidden-xs hidden-sm'%>
    </div>
    <div class="col-md-7 col-md-offset-2" style='margin-top:20px'>
      <h2>Open Therapist Directory<small> Therapist Finder</small></h2>
      <div style='text-align:right; margin-top:-30px'>
        <% if !current_user %>
          <small class='sign-in-index'>Sign in to save Therapists to your list.</small>
        <% else %>
          <small><%= link_to "My Saved Therapists", user_path %></small>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 col-xs-6">
      <p style="display:inline-block">State:</p>
      <form action="" style="display:inline-block">
        <select name="filter-state" id="filter-state" class="form-control">
          <% @states.each do |state| %>
            <option value="<%=state%>"><%=state%></option>
          <% end %>
        </select>
      </form>
    </div>
  </div>
  <hr/>
  <div class="row">
    <div class="col-xs-12 col-md-3">
      <ul class="list-unstyled">
        <div class="col-xs-12">
          <li><input class="search" placeholder="Search All Fields" style="width:100%" /></li><hr/>
        </div>
        <div class="row">
          <div class="col-xs-6">
            <li><span class="sort" data-sort="name" style="display:inline-block">Sort by Name</span></li>
          </div>
          <div class="col-xs-6">
            <li><span class="sort" data-sort="city" style="display:inline-block">Sort by City</span></li>
          </div>
        </div>
        <hr/>
        <div class="hidden-xs">
          <ins class="adsbygoogle"
               style="display:inline-block;width:300px;height:250px"
               data-ad-client="ca-pub-3222712415808754"
               data-ad-slot="8483377423">
          </ins>
        </div>
      </ul>
    </div>
    <div class="col-xs-12 col-md-8 col-md-offset-1">
      <ul class="list" style="padding-top:0px"></ul>
    </div>
  </div>
  <div class="col-xs-12 hidden-sm">
    <ins class="adsbygoogle"
     style="display:inline-block;width:320px;height:100px"
     data-ad-client="ca-pub-3222712415808754"
     data-ad-slot="4269197028"></ins>
  </div>
</div> <!-- end container -->

<script type="text/javascript" src="/assets/therapist_listing.js"></script>

<script>
  (adsbygoogle = window.adsbygoogle || []).push({});
</script>
<script>
  var initialState = <%= @initial_state %>
  var therapists = <%= @therapists %>
  var firstTherapists   = <%= @first_therapists %>
  var currentTherapists = firstTherapists;
  var state = $('#filter-state').val();

  _.each(firstTherapists, render);

  setInitialState(initialState);

  addTherapist();
</script>
