<div class="row text-center" style="margin-top:20px">
  <div class="col-xs-12 col-med-6 col-med-offset-6">
    <h2>Sign up</h2>
  </div>
</div>
<div class="row">
  <div class=" col-xs-12 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <%= f.text_field :name, autofocus: true %>
      <%= f.email_field :email %>
      <%= f.password_field :password, autocomplete: "off", label: "Password: (#{@minimum_password_length} characters minimum)" %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
      <%= f.submit "Sign up" %>
  <% end %>
  <%= render "devise/shared/links" %>
  </div>

</div>

