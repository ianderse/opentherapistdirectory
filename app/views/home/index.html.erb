<% title "Free Therapist Listing" %>
<head>
	<script src="/assets/jquery.stellar.min.js" type="text/javascript"></script>
  <meta name="Description" content="Find a therapist near you. Free for clients. Free for therapists.">
</head>

<script>
$(function(){
	$.stellar({
		horizontalScrolling: false,
		verticalOffset: 40
	});
});
</script>

<div class="photo dock" data-stellar-background-ratio="0.5">
	<span>
    <div id="home-search-therapist">
        <div class="lighter">
          <%= link_to ' ', therapists_path, class: 'push_button' %>
          <%= link_to 'Find a Therapist', therapists_path, class: 'push_button_text' %>
        </div>
    </div>
    <div id="home-search-facility">
				<div class="lighter">
          <%= link_to ' ', facilities_path, class: 'push_button' %>
          <%= link_to 'Find a Mental Health Facility', facilities_path, class: 'push_button_text_facilities' %>
				</div>
    </div>
	</span>
</div>
<div class="photo mindfulness" data-stellar-background-ratio="0.5">
	<span>
		<div class='panel' id="home-textfield-two">
			<h1 id="home-textfield-two-text">Free for Clients.<br/>  Free for Therapists.</h1>
		</div>
	</span>
</div>
